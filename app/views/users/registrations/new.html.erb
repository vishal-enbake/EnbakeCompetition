<%= content_tag :div, :class => "well well-large" do%>
        <%= content_tag :h2, "Sign Up"%>
        <%= content_tag :div do%>
    <%= form_for :user, :url => registration_path(:user), :html => {:class => "sign-up-form c2s-form"} do |f|%>
      <%= content_tag :table, :class => "form-table" do%>
        <%= content_tag :tr do%>
          <%= content_tag :td, :style => "align:right" do%>
            <%=f.label :email%>
          <% end %>
          <%= content_tag :td do%>
            <%= f.email_field :email, :required => true%>
          <% end %>
        <% end %>
        
        <%= content_tag :tr do%>
          <%= content_tag :td, :style => "align:right" do%>
            <%=f.label :password%>
          <% end %>
          <%= content_tag :td do%>
            <%= f.password_field :password, :required => true%>
          <% end %>
        <% end %>
        <%= content_tag :tr do%>
          <%= content_tag :td, :style => "align:right" do%>
            <%= f.label :password_confirmation%>
          <% end %>
          <%= content_tag :td do%>
            <%= f.password_field :password_confirmation, :required => true%>
          <% end %>
        <% end %>
        <%= content_tag :tr do%>
          <%= content_tag :td %>
          <%= content_tag :td do%>
            <%= f.submit "Next", :class => "submit-button"%>
          <% end %>
        <% end %>
      <% end %>
      <%= content_tag :div, :class => "form-ins" do%>
        <%= content_tag :div, :class => "form-ins-bottom" do%>
          (I may receive communications from Click2Sell and can change my notification preferences in <%= link_to "My Account", "#"%>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
