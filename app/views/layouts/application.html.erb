<!DOCTYPE html>
<html>
<head>
  <title>EnbakeCompetition</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<div class="row titlerow">
		<div class="span6">
			<a href="/"><%#= image_tag("logo.jpeg", :alt => "My Blog") %></a>
		</div>
		<div class="pull-right" style="margin-top:50px;">
			<% if user_signed_in? %>
				<%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "link-main-nav" %>
			<% else %>
				<%= link_to 'Sign Up', new_user_registration_path, :class => "link-main-nav link-div-vertical" %>
				<%= link_to 'Sign In', new_user_session_path, :class => "link-main-nav" %>
			<% end %>
		</div>
	</div>
	</div>

<div class="container">
	<% if notice%>
	<div class="alert alert-info">
		<button class="close" data-dismiss="alert" type="button">&times;</button>
		<%= notice %>
	</div>
<%end%>
<% if alert%>
	<div class="alert alert-error">
		<a class="close" data-dismiss="alert" href='#'>&times;</a>
		<%= simple_format(alert) %>
	</div>
<%end%>
<%= yield %>

</body>
</html>
