<%=content_tag :div, :class => "container well well-large" do %>
	<%= content_tag :div, :class => "container-fluid" do %>
		<%=content_tag :div, :class => "row-fluid" do %>
			<%= content_tag :div, :class => "span8", :style => " background-color: white;" do %>
				<%= content_tag :h3, "BLOGS", :color=>"orange"%>
				<% @blogs.each do |blog| %>
					<%= content_tag :table, :style => "" do%>
						<%= content_tag :tr do%>
							<%= content_tag :td, "Name"%>
							<%= content_tag :td do%>
								<%= content_tag :div, :style => "height:30px; width:450px;background-color:#E3E3E3;" do%>
									<%= blog.name%>
								<% end %>
							<% end %>
						<% end %>
						<%= content_tag :tr do%>
							<%= content_tag :td, "Description"%>
							<%= content_tag :td do%>
								<%= content_tag :div, :style => "height:110px; width:450px;background-color:#E3E3E3;" do%>
									<%= blog.desc%>
								<% end %>
							<% end %>
						<% end %>
						<%= content_tag :tr do%>
							<%= content_tag :td%>
							<%= content_tag :td do%>
								<%= link_to "view", blog, :class => "pull-right" if user_signed_in?%>
							<% end %>
						<% end %>
					<% end %>
				<% end %>
				<%= will_paginate @posts %>
			<% end %>
			<%= render :partial => "right_div", :locals => {:top_blogs => @top_blogs}%>
		<% end %>
	<% end %>
<% end %>


<%= link_to 'New Blog', new_blog_path %>

